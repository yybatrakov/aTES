{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "EventId": {
      "type": "string"
    },
    "EventDate": {
      "type": "string"
    },
    "Event": {
      "type": "string",
      "enum": [ "task.added" ]
    },
    "Version": {
      "type": "string",
      "enum": [ "v1" ]
    },
    "Data": {
      "type": "object",
      "properties": {
        "PublicId": {
          "type": "string"
        },
        "AssignedUserId": {
          "type": "string"
        }
      },
      "required": [
        "PublicId",
        "AssignedUserId"
      ]
    }
  },
  "required": [
    "EventId",
    "EventDate",
    "Event",
    "Version",
    "Data"
  ]
}